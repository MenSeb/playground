{
    "extends": [
        "stylelint-config-standard-scss",
        "stylelint-config-sass-guidelines"
    ],
    "rules": {
        "max-nesting-depth": [
            3,
            {
                "ignore": ["blockless-at-rules", "pseudo-classes"],
                "ignoreAtRules": ["media"]
            }
        ],
        "import-notation": "url",
        "no-descending-specificity": null,
        "selector-max-id": 1,
        "selector-no-qualifying-type": null,
        "declaration-empty-line-before": null
    }
}
